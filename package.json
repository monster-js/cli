{
  "name": "@monster-js/cli",
  "version": "1.1.1",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "lint": "tsc --noEmit",
    "build": "tsc && npm run copy:assets",
    "watch": "tsc --watch",
    "copy:assets": "ncp ./src/assets ./dist/src/assets",
    "major-release": "npm version major && npm run build",
    "minor-release": "npm version minor && npm run build",
    "patch-release": "npm version patch && npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "mn"
  ],
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^9.1.0",
    "ncp": "^2.0.0",
    "open": "^8.4.0"
  },
  "bin": {
    "mn": "./dist/index.js"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/ncp": "^2.0.5",
    "@types/node": "^17.0.22",
    "@types/open": "^6.2.1"
  }
}
